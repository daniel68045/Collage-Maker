<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Recommended Artists</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      text-align: center;
      background-color: #f8f9fa;
    }
    .grid {
      display: grid;
      grid-template-columns: repeat(5, 1fr);
      gap: 10px;
      max-width: 80%;
      margin: 20px auto;
    }
    .card {
      background-color: #fff;
      border: 1px solid #ddd;
      border-radius: 8px;
      overflow: hidden;
      text-align: center;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }
    .card img {
      width: 100%;
      height: 200px;
      object-fit: cover;
    }
    .card .name {
      padding: 10px;
      font-size: 1rem;
      font-weight: bold;
    }
  </style>
</head>
<body>
  <h1>Recommended Artists</h1>
  <div class="grid">
    <% recommendations.forEach(artist => { %>
      <div class="card">
        <% if (artist.image) { %>
          <img src="<%= artist.image %>" alt="<%= artist.name %>">
        <% } else { %>
          <div style="height: 200px; background-color: #ddd; display: flex; align-items: center; justify-content: center;">
            <span>No Image</span>
          </div>
        <% } %>
        <div class="name"><%= artist.name %></div>
      </div>
    <% }); %>
  </div>
</body>
</html>
